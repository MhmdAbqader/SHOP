@model ShoppingCart
<form asp-action="Add2Cart" asp-controller="Home" asp-area="Customer">

    <input hidden asp-for="Product.Id" />
<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="~/@Model.Product.ImageUrl" width="450" height="300" /></div>
                <div class="col-md-6">
                    <div class="small mb-1">@Model.Product.Category.Name</div>
                    <div class="fs-5 mb-5">
                        <span class="text-decoration-line-through"> $200.00</span>
                        <span>@Model.Product.Price</span>
                        </div>
                    <p class="lead">@Model.Product.Description</p>
                    <div class="d-flex">
                        @*<input class="form-control text-center me-3" type="number" value="1" style="max-width:3rem"/>*@
                        <input class="form-control text-center me-3" type="number" asp-for="Count" style="max-width:3rem"/>
                        <button class="btn btn-outline-dark flex-shrink-0" type="submit">
                            <i class="bi-cart-fill me-1"></i>
                            Add to Cart
                        </button>
                    </div>
                </div>
            
        </div>
    </div>
</section>
</form>
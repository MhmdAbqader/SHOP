@{
}
@{
    ViewBag.PageTitle = "Product Management";
    ViewBag.CardTitle = "Edit Product ";
    Layout = "~/Views/Shared/_DashBoard.cshtml";
}


<hr />
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form method="post" asp-action="Edit" asp-controller="Product" asp-area="Admin" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                <input type="hidden" asp-for="Product.Id" />
                <input type="hidden" asp-for="Product.ImageUrl" />

                <div class="form-group">
                    <label asp-for="Product.Name" class="control-label"></label>
                    <input asp-for="Product.Name" class="form-control" />
                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Product.ImageUrl" class="control-label"></label>
                    <input type="file" name="productImage" class="form-control" />
                    <span asp-validation-for="Product.ImageUrl" class="text-danger"></span>
                </div>
              
                <div class="form-group">
                    <label asp-for="Product.Price" class="control-label"></label>
                    <input asp-for="Product.Price" class="form-control" />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>            
                 

                <div class="form-group">
                    <label asp-for="Product.CategoryId" class="control-label"></label>
                    <select asp-for="Product.CategoryId" asp-items="Model.CategoriesDDList" class="form-control">
                        <option selected disabled>select Category</option>
                    </select>
                    @*<span asp-validation-for="Product.Description" class="text-danger"></span>*@
                </div>
                <div class="form-group" >
                    <label asp-for="Product.Description" class="control-label"></label>
                    <textarea id="mytextareaTinyMce" asp-for="Product.Description" class="form-control" style="height:10px"></textarea>
                    @*@Html.TextAreaFor(model=>model.Product.Description,6,6,new {@id="mytextareaTinyMce"})*@
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    @* <input type="submit" value="Create" class="btn btn-primary" />*@
                    <button type="submit" class="btn btn-info" @* onclick="Done()"*@>Edit Product</button>
                    <a href="/Admin/Product/Index" class="btn btn-dark"> Back To List</a>
                </div>
            </form>
        </div>

        <div class="col-md-8" style="padding:60px">
            <img src="~/@Model.Product.ImageUrl" />
        </div>
    </div>
</div>




@section myJS{
    <script>
        function Done() {
            alert("Successfully Category Created ");
        }
    </script>
}

@* -------------------- in the below line i added client side validation before going to server --------------*@


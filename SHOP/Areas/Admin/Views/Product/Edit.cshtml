    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        tinymce.init({
            selector: '#mytextareaTinyMce',
            width: 340,
            height: 200,
        });
    </script>
    @*<partial name="_ValidationScriptsPartial"></partial>*@ // already working well
}
